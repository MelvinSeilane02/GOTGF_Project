@model GOTGF_Project.Models.Project

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0" style="background-color:#ffffff; border-radius:15px;">
        <div class="card-header text-center" style="background-color:#008000; color:white; border-radius:15px 15px 0 0;">
            <h2 class="mb-0">📋 Project Details</h2>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3 text-dark fw-bold">Project Name</dt>
                <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.ProjectName)</dd>

                <dt class="col-sm-3 text-dark fw-bold">Description</dt>
                <dd class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 text-dark fw-bold">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                <dt class="col-sm-3 text-dark fw-bold">Start Date</dt>
                <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-3 text-dark fw-bold">End Date</dt>
                <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.EndDate)</dd>
            </dl>
        </div>
        <div class="card-footer text-center" style="background-color:#f8f9fa; border-radius:0 0 15px 15px;">
            <a asp-action="Edit" asp-route-id="@Model?.ProjectID" class="btn btn-outline-success px-4 me-2">✏️ Edit</a>
            <a asp-action="Index" class="btn btn-outline-dark px-4">⬅️ Back to List</a>
        </div>
    </div>
</div>
