@model GOTGF_Project.Models.UsersIndexViewModel

@{
    ViewData["Title"] = "Manage Users & Roles";
}

<div class="container mt-4">
    <h1 class="mb-3 text-success">Manage Users & Roles</h1>

    @if (TempData["RoleChangeError"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["RoleChangeError"]</div>
    }
    @if (TempData["RoleChangeSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["RoleChangeSuccess"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th class="text-white">Full Name</th>
                    <th class="text-white">Email</th>
                    <th class="text-white">Current Role(s)</th>
                    <th class="text-white">Set Role</th>
                    <th class="text-white">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td class="fw-semibold">@(!string.IsNullOrEmpty(user.FullName) ? user.FullName : "(no name)")</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.CurrentRoles != null && user.CurrentRoles.Any())
                            {
                                foreach (var r in user.CurrentRoles)
                                {
                                    <span class="badge bg-success text-dark me-1">@r</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No role</span>
                            }
                        </td>

                        <td style="min-width:260px;">
                            <form asp-controller="UserRole" asp-action="Edit" method="post" class="d-flex align-items-center">
                                @* Anti-forgery included automatically by the form tag helper *@
                                <input type="hidden" name="Id" value="@user.Id" />
                                <select name="SelectedRole" class="form-select form-select-sm me-2" required>
                                    <option value="">-- Select role --</option>
                                    @foreach (var role in Model.AvailableRoles)
                                    {
                                        var isSelected = user.CurrentRoles != null && user.CurrentRoles.Contains(role);
                                        <option value="@role" selected="@(isSelected ? "selected" : null)">@role</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-success">Update</button>
                            </form>
                        </td>

                        <td>
                            <form asp-controller="UserRole" asp-action="Delete" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this user?');"
                                  class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

