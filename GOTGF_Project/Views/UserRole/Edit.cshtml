@model GOTGF_Project.Models.UserEditViewModel

@{
    ViewData["Title"] = "Edit User Role";
}

<div class="container mt-4">
    <h2 class="mb-3">Edit role for @Model.Email</h2>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@err.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-area="" asp-controller="UserRole" asp-action="Edit" method="post" class="w-50">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="FullName" />

        <div class="mb-3">
            <label asp-for="SelectedRole" class="form-label">Role</label>
            <select asp-for="SelectedRole" class="form-select">
                <option value="">-- Clear role --</option>
                @foreach (var r in Model.AvailableRoles)
                {
                    <option value="@r" selected="@(Model.SelectedRole == r ? "selected" : null)">@r</option>
                }
            </select>
            <span asp-validation-for="SelectedRole" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
