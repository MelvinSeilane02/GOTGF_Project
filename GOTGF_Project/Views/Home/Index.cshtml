@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-5">
    <h1 class="display-3 fw-bold text-success">🌍 Welcome to GOTGF</h1>
    <p class="lead text-muted">
        Together we make a difference — responding to disasters, supporting projects, and rebuilding communities.
    </p>

    <div class="d-flex justify-content-center flex-wrap gap-3 mt-5">
        <a asp-controller="Projects" asp-action="Index" class="btn btn-success btn-lg shadow">Explore Projects</a>
        <a asp-controller="Donations" asp-action="Index" class="btn btn-dark btn-lg shadow">Donate Now</a>
        <a asp-controller="DisasterAlerts" asp-action="Index" class="btn btn-outline-success btn-lg shadow">View Alerts</a>
    </div>

    <hr class="my-5 w-50 mx-auto" style="border-top: 2px solid #28a745;" />

    <div class="mt-4">
        <p class="fw-light text-muted">
            Built with ❤️ using <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="text-success fw-bold">ASP.NET Core</a>.
        </p>
    </div>
</div>
