@model GOTGF_Project.Models.Donation

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-success mb-4">Edit Donation</h1>

<div class="card border-success shadow-sm">
    <!-- Card Header -->
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">Update Donation</h4>
    </div>

    <!-- Card Body -->
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DonationID" />

            <!-- Amount -->
            <div class="mb-3">
                <label asp-for="Amount" class="form-label fw-bold"></label>
                <input asp-for="Amount" class="form-control" placeholder="Enter amount in Rands (ZAR)" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Donation Date -->
            <div class="mb-3">
                <label asp-for="DonationDate" class="form-label fw-bold"></label>
                <input asp-for="DonationDate" type="date" class="form-control" />
                <span asp-validation-for="DonationDate" class="text-danger"></span>
            </div>

            <!-- User -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-bold"></label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Project -->
            <div class="mb-3">
                <label asp-for="ProjectID" class="form-label fw-bold"></label>
                <select asp-for="ProjectID" class="form-select" asp-items="ViewBag.ProjectID"></select>
                <span asp-validation-for="ProjectID" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-start gap-2">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
