@model GOTGF_Project.Models.Donation

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">➕ Create Donation</h2>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label fw-bold text-dark"></label>
                    <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="Enter donation amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DonationDate" class="form-label fw-bold text-dark"></label>
                    <input asp-for="DonationDate" type="date" class="form-control" />
                    <span asp-validation-for="DonationDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserId" class="form-label fw-bold text-dark"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ProjectID" class="form-label fw-bold text-dark"></label>
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                    <input type="submit" value="💾 Save Donation" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
