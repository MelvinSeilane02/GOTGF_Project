@model GOTGF_Project.Models.Donation

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-success mb-4">Donation Details</h1>

<div class="card border-success shadow-sm">
    <!-- Card Header -->
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">Donation Information</h4>
    </div>

    <!-- Card Body -->
    <div class="card-body">
        <dl class="row">
            <!-- Amount -->
            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">
                @Model.Amount.ToString("C", new System.Globalization.CultureInfo("en-ZA"))
            </dd>

            <!-- Donation Date -->
            <dt class="col-sm-3">Donation Date</dt>
            <dd class="col-sm-9">
                @Model.DonationDate.ToString("dd MMM yyyy")
            </dd>

            <!-- User -->
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">
                @Model.User?.UserName
            </dd>

            <!-- Project -->
            <dt class="col-sm-3">Project</dt>
            <dd class="col-sm-9">
                @Model.Project?.ProjectName
            </dd>
        </dl>
    </div>

    <!-- Card Footer with Buttons -->
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model?.DonationID" class="btn btn-warning me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
