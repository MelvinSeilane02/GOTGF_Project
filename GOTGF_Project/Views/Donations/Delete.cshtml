@model GOTGF_Project.Models.Donation

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">🗑 Delete Donation</h2>
        </div>

        <div class="card-body bg-light">
            <h4 class="text-danger fw-bold mb-3">⚠ Are you sure you want to delete this donation?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-bold text-dark">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Amount)
                </dd>

                <dt class="col-sm-3 fw-bold text-dark">
                    @Html.DisplayNameFor(model => model.DonationDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DonationDate)
                </dd>

                <dt class="col-sm-3 fw-bold text-dark">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.User.Id)
                </dd>

                <dt class="col-sm-3 fw-bold text-dark">
                    @Html.DisplayNameFor(model => model.Project)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Project.ProjectName)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="DonationID" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                    <input type="submit" value="🗑 Confirm Delete" class="btn btn-danger px-4" />
                </div>
            </form>
        </div>
    </div>
</div>
