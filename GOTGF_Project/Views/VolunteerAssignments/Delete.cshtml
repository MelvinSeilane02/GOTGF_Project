@model GOTGF_Project.Models.VolunteerAssignment

@{
    ViewData["Title"] = "Delete Volunteer Assignment";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger">🛑 Delete Volunteer Assignment</h1>

    <h4>Are you sure you want to delete this assignment?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Volunteer)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Volunteer.UserId)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AssignedDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AssignedDate)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="AssignmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
