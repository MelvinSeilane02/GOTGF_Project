@model IEnumerable<GOTGF_Project.Models.VolunteerAssignment>

@{
    ViewData["Title"] = "Volunteer Assignments";
}

<div class="container mt-5">
    <h1 class="mb-4">📋 Volunteer Assignments</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Volunteer)</th>
                <th>@Html.DisplayNameFor(model => model.Project)</th>
                <th>@Html.DisplayNameFor(model => model.AssignedDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Volunteer.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Project.ProjectName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AssignedDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AssignmentID" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.AssignmentID" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.AssignmentID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
