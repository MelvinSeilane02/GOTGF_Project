@model GOTGF_Project.Models.VolunteerAssignment

@{
    ViewData["Title"] = "Create Volunteer Assignment";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">📝 Assign Volunteer</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="VolunteerID" class="form-label"></label>
                    <select asp-for="VolunteerID" class="form-select" asp-items="ViewBag.VolunteerID"></select>
                    <span asp-validation-for="VolunteerID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProjectID" class="form-label"></label>
                    <select asp-for="ProjectID" class="form-select" asp-items="ViewBag.ProjectID"></select>
                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedDate" class="form-label"></label>
                    <input asp-for="AssignedDate" class="form-control" />
                    <span asp-validation-for="AssignedDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Create Assignment</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
