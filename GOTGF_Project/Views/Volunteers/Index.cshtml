@model IEnumerable<GOTGF_Project.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
}

<h1>Volunteers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VolunteerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VolunteerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VolunteerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
