@model GOTGF_Project.Models.Volunteer

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger">🗑️ Delete Volunteer</h1>

    <h3 class="mb-3">Are you sure you want to delete this volunteer?</h3>

    <div class="card p-3 mb-4">
        <h4 class="mb-3">Volunteer Details</h4>
        <dl class="row">
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Id)</dd>

            <dt class="col-sm-3">Skills</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Skills)</dd>

            <dt class="col-sm-3">Availability</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Availability)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VolunteerID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
