@model IEnumerable<GOTGF_Project.Models.DisasterAlert>

@{
    ViewData["Title"] = "Disaster Alerts";
}

<h1 class="text-center text-success mb-4">Disaster Alerts</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">
        <a asp-action="Create" class="btn btn-success">+ Create New Alert</a>
    </p>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Project)</th>
                <th>@Html.DisplayNameFor(model => model.User)</th>
                <th>@Html.DisplayNameFor(model => model.AlertMessage)</th>
                <th>@Html.DisplayNameFor(model => model.AlertDate)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Project.ProjectName)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AlertMessage)</td>
                    <td>@item.AlertDate.ToString("dd MMM yyyy HH:mm")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.AlertID" class="btn btn-sm btn-outline-success">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.AlertID" class="btn btn-sm btn-outline-dark">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.AlertID" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

