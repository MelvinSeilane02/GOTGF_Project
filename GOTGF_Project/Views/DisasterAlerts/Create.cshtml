@model GOTGF_Project.Models.DisasterAlert

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header text-white" style="background-color: #004d00;">
            <h2 class="mb-0">➕ Create Disaster Alert</h2>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="ProjectID" class="form-label fw-bold"></label>
                    <select asp-for="ProjectID" class="form-select" asp-items="ViewBag.ProjectID"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedBy" class="form-label fw-bold"></label>
                    <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedBy"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="AlertMessage" class="form-label fw-bold"></label>
                    <input asp-for="AlertMessage" class="form-control border-success shadow-sm" placeholder="Enter alert details..." />
                    <span asp-validation-for="AlertMessage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AlertDate" class="form-label fw-bold"></label>
                    <input asp-for="AlertDate" type="datetime-local" class="form-control border-success shadow-sm" />
                    <span asp-validation-for="AlertDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                    <input type="submit" value="Create Alert" class="btn btn-success px-4 shadow" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
