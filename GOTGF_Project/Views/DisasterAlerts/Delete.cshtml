@model GOTGF_Project.Models.DisasterAlert

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header text-white bg-dark">
            <h2 class="mb-0">⚠️ Delete Disaster Alert</h2>
        </div>

        <div class="card-body bg-light">
            <h4 class="text-danger fw-bold">Are you sure you want to delete this alert?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Project</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.ProjectName)</dd>

                <dt class="col-sm-3 fw-bold">Created By</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Id)</dd>

                <dt class="col-sm-3 fw-bold">Message</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AlertMessage)</dd>

                <dt class="col-sm-3 fw-bold">Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AlertDate)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="AlertID" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Cancel</a>
                    <input type="submit" value="Delete" class="btn btn-danger px-4 shadow" />
                </div>
            </form>
        </div>
    </div>
</div>
