@model GOTGF_Project.Models.DisasterAlert

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">📋 Disaster Alert Details</h2>
        </div>

        <div class="card-body bg-light">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-dark">Project</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.ProjectName)</dd>

                <dt class="col-sm-3 fw-bold text-dark">Created By</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Id)</dd>

                <dt class="col-sm-3 fw-bold text-dark">Message</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AlertMessage)</dd>

                <dt class="col-sm-3 fw-bold text-dark">Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AlertDate)</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model?.AlertID" class="btn btn-success px-4">✏ Edit</a>
            </div>
        </div>
    </div>
</div>
