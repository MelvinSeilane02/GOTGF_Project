@using Microsoft.AspNetCore.Identity
@using GOTGF_Project.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = await UserManager.GetUserAsync(User);
    var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();
    bool isAdmin = roles.Contains("Admin");
    bool isVolunteer = roles.Contains("Volunteer");
    bool isDonor = roles.Contains("Donor");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GOTGF</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        /* 🌿 THEME COLORS */
        :root {
            --green: #28a745;
            --black: #000;
            --white: #fff;
        }

        body {
            background-color: #f8f9fa;
        }

        /* 🖤 NAVBAR STYLE */
        .navbar-custom {
            background-color: var(--black);
            border-bottom: 3px solid var(--green);
        }

        .navbar-brand {
            color: var(--green) !important;
            font-weight: bold;
        }

        .nav-link {
            color: var(--white) !important;
            display: flex;
            align-items: center;
            gap: 6px;
            font-weight: 500;
        }

            .nav-link:hover {
                color: var(--green) !important;
                transform: scale(1.05);
                transition: all 0.2s ease;
            }

        /* 📱 RESPONSIVENESS */
        .navbar-toggler {
            border: 1px solid var(--green);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%2328a745' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255,255,255,0.8%29' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Buttons */
        .btn-success {
            background-color: var(--green);
            border-color: var(--green);
        }

        .btn-link.nav-link {
            color: var(--white) !important;
        }

        footer {
            background-color: #111;
            color: #ccc;
        }

            footer a {
                color: var(--green);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-leaf"></i> GOTGF Dashboard
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house"></i> Home
                            </a>
                        </li>

                        @if (isAdmin)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="UserRole" asp-action="Index"><i class="fa-solid fa-users-gear"></i> Manage Users</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Projects" asp-action="Index"><i class="fa-solid fa-diagram-project"></i> Projects</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="DisasterAlerts" asp-action="Index"><i class="fa-solid fa-bell"></i> Disaster Alerts</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index"><i class="fa-solid fa-chart-line"></i> Reports</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Volunteers" asp-action="Index"><i class="fa-solid fa-hand-holding-heart"></i> Volunteers</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="VolunteerAssignments" asp-action="Index"><i class="fa-solid fa-tasks"></i> Assignments</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Donations" asp-action="Index"><i class="fa-solid fa-donate"></i> Donations</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Resources" asp-action="Index"><i class="fa-solid fa-boxes-stacked"></i> Resources</a></li>
                        }

                        @if (isVolunteer)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Projects" asp-action="Index"><i class="fa-solid fa-diagram-project"></i> Projects</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="DisasterAlerts" asp-action="Index"><i class="fa-solid fa-bell"></i> Disaster Alerts</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index"><i class="fa-solid fa-chart-line"></i> Reports</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="VolunteerAssignments" asp-action="Index"><i class="fa-solid fa-tasks"></i> Assignments</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Donations" asp-action="Index"><i class="fa-solid fa-donate"></i> Donations</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Resources" asp-action="Index"><i class="fa-solid fa-boxes-stacked"></i> Resources</a></li>
                        }

                        @if (isDonor)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Donations" asp-action="Index"><i class="fa-solid fa-hand-holding-usd"></i> Donations</a></li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-3">
                                <span class="nav-link"><i class="fa-solid fa-user-circle"></i> Hello, @UserManager.GetUserName(User)</span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success px-3">
                                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fa-solid fa-right-to-bracket"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fa-solid fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center py-3">
        &copy; 2025 - <span class="text-success">GOTGF</span> |
        <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
