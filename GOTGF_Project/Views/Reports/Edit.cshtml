@model GOTGF_Project.Models.Report

@{
    ViewData["Title"] = "Edit Report";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0" style="border-radius:15px;">
        <div class="card-header text-white" style="background-color:#000; border-radius:15px 15px 0 0;">
            <h3 class="mb-0">✏️ Edit Report</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ReportID" />

                <div class="mb-3">
                    <label asp-for="ReportType" class="form-label fw-bold text-success"></label>
                    <input asp-for="ReportType" class="form-control" />
                    <span asp-validation-for="ReportType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReportDate" class="form-label fw-bold text-success"></label>
                    <input asp-for="ReportDate" class="form-control" />
                    <span asp-validation-for="ReportDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProjectID" class="form-label fw-bold text-success"></label>
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GeneratedBy" class="form-label fw-bold text-success"></label>
                    <select asp-for="GeneratedBy" class="form-control" asp-items="ViewBag.GeneratedBy"></select>
                    <span asp-validation-for="GeneratedBy" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Save" class="btn btn-primary px-4" />
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
