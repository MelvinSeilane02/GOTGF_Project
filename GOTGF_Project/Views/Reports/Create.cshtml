@model GOTGF_Project.Models.Report

@{
    ViewData["Title"] = "Create Report";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0" style="border-radius:15px;">
        <div class="card-header text-white" style="background-color:#008000; border-radius:15px 15px 0 0;">
            <h3 class="mb-0">📝 Create Report</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="ReportType" class="form-label fw-bold"></label>
                    <input asp-for="ReportType" class="form-control border-dark" placeholder="Enter report type (e.g. Financial, Progress)" />
                    <span asp-validation-for="ReportType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReportDate" class="form-label fw-bold"></label>
                    <input asp-for="ReportDate" type="date" class="form-control border-dark" />
                    <span asp-validation-for="ReportDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProjectID" class="form-label fw-bold"></label>
                    <select asp-for="ProjectID" class="form-control border-dark" asp-items="ViewBag.ProjectID">
                        <option value="">-- Select Project --</option>
                    </select>
                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="GeneratedBy" class="form-label fw-bold"></label>
                    <select asp-for="GeneratedBy" class="form-control border-dark" asp-items="ViewBag.GeneratedBy">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="GeneratedBy" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                    <input type="submit" value="Create Report" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
