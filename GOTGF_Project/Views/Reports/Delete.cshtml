@model GOTGF_Project.Models.Report

@{
    ViewData["Title"] = "Delete Report";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0" style="border-radius:15px;">
        <div class="card-header text-white" style="background-color:#000; border-radius:15px 15px 0 0;">
            <h3 class="mb-0">⚠️ Confirm Delete</h3>
        </div>
        <div class="card-body p-4">
            <h4 class="text-danger">Are you sure you want to delete this report?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-bold text-success">
                    @Html.DisplayNameFor(model => model.ReportType)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ReportType)
                </dd>

                <dt class="col-sm-3 fw-bold text-success">
                    @Html.DisplayNameFor(model => model.ReportDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ReportDate)
                </dd>

                <dt class="col-sm-3 fw-bold text-success">
                    @Html.DisplayNameFor(model => model.Project)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Project.ProjectName)
                </dd>

                <dt class="col-sm-3 fw-bold text-success">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.User.Id)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="ReportID" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark px-4">⬅ Back to List</a>
                    <input type="submit" value="🗑 Delete Report" class="btn btn-danger px-4" />
                </div>
            </form>
        </div>
    </div>
</div>
