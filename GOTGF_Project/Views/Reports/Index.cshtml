@model IEnumerable<GOTGF_Project.Models.Report>

@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-success">📊 Reports</h1>
        <a asp-action="Create" class="btn btn-primary">➕ Create New</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-black text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ReportType)</th>
                <th>@Html.DisplayNameFor(model => model.ReportDate)</th>
                <th>@Html.DisplayNameFor(model => model.Project)</th>
                <th>@Html.DisplayNameFor(model => model.User)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ReportType)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReportDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Project.ProjectName)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Id)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ReportID" class="btn btn-sm btn-success me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ReportID" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ReportID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
