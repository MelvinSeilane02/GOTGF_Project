@model IEnumerable<GOTGF_Project.Models.Resource>

@{
    ViewData["Title"] = "Resources";
}

<div class="container mt-5">
    <h1 class="text-success mb-4">📦 Resources</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Create New Resource</a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-success">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Project)</th>
                <th>@Html.DisplayNameFor(model => model.ResourceName)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.LastUpdated)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Project.ProjectName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ResourceName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastUpdated)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ResourceID" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ResourceID" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ResourceID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
