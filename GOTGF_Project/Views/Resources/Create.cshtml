@model GOTGF_Project.Models.Resource

@{
    ViewData["Title"] = "Create Resource";
}

<div class="container mt-5">
    <h1 class="text-success">➕ Create Resource</h1>
    <hr class="border-success">

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="ProjectID" class="form-label fw-bold"></label>
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ResourceName" class="form-label fw-bold"></label>
                    <input asp-for="ResourceName" class="form-control" />
                    <span asp-validation-for="ResourceName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastUpdated" class="form-label fw-bold"></label>
                    <input asp-for="LastUpdated" class="form-control" type="date" />
                    <span asp-validation-for="LastUpdated" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
