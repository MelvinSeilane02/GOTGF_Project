@model GOTGF_Project.Models.Resource

@{
    ViewData["Title"] = "Delete Resource";
}

<div class="container mt-5">
    <h1 class="text-danger">🗑️ Delete Resource</h1>
    <hr class="border-danger">

    <h4 class="text-dark">Are you sure you want to delete this?</h4>
    <div class="mt-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Project</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.ProjectName)</dd>

            <dt class="col-sm-3 fw-bold">Resource Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ResourceName)</dd>

            <dt class="col-sm-3 fw-bold">Quantity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-3 fw-bold">Last Updated</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LastUpdated)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ResourceID" />
            <div class="mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
