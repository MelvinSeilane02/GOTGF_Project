@model GOTGF_Project.Models.Resource

@{
    ViewData["Title"] = "Edit Resource";
}

<div class="container mt-5">
    <h1 class="text-success">✏️ Edit Resource</h1>
    <hr class="border-success">

    <div class="row mt-4">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ResourceID" />

                <div class="mb-3">
                    <label asp-for="ProjectID" class="form-label fw-bold"></label>
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ResourceName" class="form-label fw-bold"></label>
                    <input asp-for="ResourceName" class="form-control" />
                    <span asp-validation-for="ResourceName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastUpdated" class="form-label fw-bold"></label>
                    <input asp-for="LastUpdated" class="form-control" />
                    <span asp-validation-for="LastUpdated" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
