@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-success fw-bold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row mt-4">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control border-success" autocomplete="current-password" aria-required="true" placeholder="Enter old password" />
                <label asp-for="Input.OldPassword" class="form-label text-dark">Old Password</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control border-success" autocomplete="new-password" aria-required="true" placeholder="Enter new password" />
                <label asp-for="Input.NewPassword" class="form-label text-dark">New Password</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control border-success" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                <label asp-for="Input.ConfirmPassword" class="form-label text-dark">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-success btn-lg fw-bold">Update Password</button>
        </form>
    </div>
</div>

<style>
    /* Custom Input Focus */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    /* Form Labels */
    .form-label {
        font-weight: 500;
    }

    /* Button Hover */
    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
