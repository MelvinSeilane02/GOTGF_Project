@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-success fw-bold">@ViewData["Title"]</h3>

<div class="alert alert-warning border border-dark bg-white text-dark shadow-sm" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div class="mt-3">
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control border-success" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                <label asp-for="Input.Password" class="form-label text-dark">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }

        <button class="w-100 btn btn-danger btn-lg fw-bold" type="submit">Delete Data and Close My Account</button>
    </form>
</div>

<style>
    /* Input focus styling */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    /* Form labels */
    .form-label {
        font-weight: 500;
    }

    /* Button hover effect */
    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
