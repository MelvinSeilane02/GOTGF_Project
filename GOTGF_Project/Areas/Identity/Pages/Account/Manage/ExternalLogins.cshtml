@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Manage your external logins";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<h3 class="text-success fw-bold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

@if (Model.CurrentLogins?.Count > 0)
{
    <h4 class="text-dark">Registered Logins</h4>
    <table class="table table-striped table-bordered border-dark">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr class="bg-white text-dark">
                    <td id="@($"login-provider-{login.LoginProvider}")">@login.ProviderDisplayName</td>
                    <td>
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                                <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                <button type="submit" class="btn btn-danger btn-sm fw-bold" title="Remove this @login.ProviderDisplayName login from your account">Remove</button>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.OtherLogins?.Count > 0)
{
    <h4 class="text-dark mt-4">Add another service to log in</h4>
    <hr class="border-dark" />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-success btn-sm fw-bold me-2 mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                        @provider.DisplayName
                    </button>
                }
            </p>
        </div>
    </form>
}

<style>
    table.table td, table.table th {
        vertical-align: middle;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>
