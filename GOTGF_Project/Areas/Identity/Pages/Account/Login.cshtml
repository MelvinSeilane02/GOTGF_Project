@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row my-5 justify-content-center">
    <div class="col-md-4">
        <section class="p-4 border rounded shadow bg-white">
            <h1 class="text-success fw-bold text-center mb-4">@ViewData["Title"]</h1>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-success btn-lg mb-3">Log in</button>

                <div class="text-center">
                    <p><a class="text-success" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                    <p><a class="text-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                    <p><a class="text-success" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-4">
        <section class="p-4 border rounded shadow bg-white">
            <h3 class="text-dark mb-3">Use another service to log in</h3>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p class="text-muted">
                    No external authentication services are configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-success" target="_blank">this article</a> about setting up external login providers.
                </p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="w-100 btn btn-success mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                    }
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Green, Black & White Theme */
    body {
        background-color: #f8f9fa;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    a.text-success:hover {
        text-decoration: underline;
    }

    section {
        background-color: #fff;
    }
</style>
